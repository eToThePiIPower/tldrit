<ul class="list-group">
  <% @links.each do |link| %>
    <li class="link list-group-item">
      <h4 class="title"><%= link_to link.title, link %> <small>(<%= link.url %>)</small></h4>
      <small class="author">
        Submitted <%= time_ago_in_words(link.created_at) %>
        by <%= link.user.email %>
      </small>
      <% if user_signed_in? && link.user == current_user %>
        <span class="pull-right">
          <%= link_to edit_link_path(link) do %>
            <i class="glyphicon glyphicon-edit" title="Edit"></i>
          <% end %>
          <%= link_to link, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="glyphicon glyphicon-remove" title="Delete"></i>
          <% end %>
        </span>
      <% end %>
    </li>
  <% end %>
</ul>
