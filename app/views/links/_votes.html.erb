<div class="votes btn-group-vertical">
  <% if user_signed_in? and current_user.voted_up_on? link %>
    <div class="upvote btn btn-xs btn-success"><i class="glyphicon glyphicon-menu-up upvoted"></i></div>
  <% elsif user_signed_in? %>
    <%= link_to upvote_link_path(link), class: 'upvote btn btn-xs btn-default', method: :put do %>
      <i class="glyphicon glyphicon-menu-up"></i>
    <% end %>
  <% else %>
    <div class="upvote btn btn-xs btn-default"><i class="glyphicon glyphicon-menu-up"></i></div>
  <% end %>

  <% if user_signed_in? and current_user.voted_on? link %>
    <div class="votes_total voted btn btn-xs btn-default"><%= link.votes_total %></div>
  <% else %>
    <div class="votes_total btn btn-xs btn-default"><%= link.votes_total %></div>
  <% end %>

  <% if user_signed_in? and current_user.voted_down_on? link %>
    <div class="downvote btn btn-xs btn-danger"><i class="glyphicon glyphicon-menu-down downvoted"></i></div>
  <% elsif user_signed_in? %>
    <%= link_to downvote_link_path(link), class: 'downvote btn btn-xs btn-default', method: :put do %>
      <i class="glyphicon glyphicon-menu-down"></i>
    <% end %>
  <% else %>
    <div class="downvote btn btn-xs btn-default"><i class="glyphicon glyphicon-menu-down"></i></div>
  <% end %>
</div>
